#include "ui/menudef.h"
{

  assetGlobalDef {
    	font "fonts/font" 18				// font
    	smallFont "fonts/smallfont" 14			// font
    	bigFont "fonts/bigfont" 22			// font		
	
	cursor "ui/assets/3_cursor3.tga"			

	gradientBar "ui/assets/gradientbar2.tga"	

	itemFocusSound "sound/misc/menu2.wav"	
	
    	fadeClamp 1.0					
	fadeCycle 1					
	fadeAmount 0.1					
	shadowColor 0.1 0.1 0.1 0.25	
  	}
							   

\\ INGAME MENU \\

  menuDef {
    	name "ingame"
    	visible 0
    	fullScreen 0
	border 0
	outOfBoundsClick		
    	rect 0 0 640 40
	focusColor 1 0 0 1
	disableColor .5 .5 .5 1

itemDef {
	name window
	rect 0 0 640 40
	style 1
	backcolor .1 .1 .37 1
      	background "ui/assets/ingame_top_back.tga"
      	visible 1 
      	decoration
	}

itemDef {
	name window
	rect -1 -1 640 40
	style 0
	border 1
  	bordercolor .6 .6 .6 1
      	visible 1 
     	decoration
	}

itemdef
	{
	name about
	text "about"	
	rect 16 12 50 20
	type 1
	style WINDOW_STYLE_FILLED
	textalign 2
	textalignx 46
	textaligny 16
	textscale .22
	forecolor 1 1 1 1
	backcolor .1 .2 .6 .5
	visible 1
	action { play "ui/assets/menu_yes.wav" ; 
		 open ingame_about }
	mouseEnter { setitemcolor about backcolor 1 1 1 0.75 }
      	mouseExit { setitemcolor about backcolor .1 .2 .6 .5 }

	border 1
	bordercolor 1 1 1 .25
	}


